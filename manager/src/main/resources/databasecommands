SHOW DATABASES;

SHOW TABLES;

DROP TABLE [table_name]

CREATE DATABASE ideas;

CREATE DATABASE tasks;

CREATE USER 'java'@'localhost' IDENTIFIED BY 'password';

GRANT SELECT, INSERT ON ideas.art TO 'java'@'localhost';

USE ideas;

DESCRIBE ideas;

CREATE TABLE art
(
  id              INT unsigned NOT NULL AUTO_INCREMENT, # Unique ID for the record
  title           VARCHAR(150) NOT NULL,                # title of idea
  created         DATE NOT NULL,                        # creation date
  implemented     VARCHAR(150) NOT NULL,                # implementation date of idea
  description     VARCHAR(150) NOT NULL,                # description of idea
  PRIMARY KEY     (id)                                  # Make the id the primary key
);

SELECT description FROM art WHERE title = 'Native American Flute';

INSERT INTO art ( title, created, implemented, description) VALUES (?,?,?,?);

USE tasks;

GRANT SELECT, INSERT, DELETE ON tasks.jobsearch TO 'java'@'localhost';

DESCRIBE jobsearch

CREATE TABLE jobsearch
(
  id              INT unsigned NOT NULL AUTO_INCREMENT, # Unique ID for the record
  title           VARCHAR(150) NOT NULL,                # title of task
  created         DATE NOT NULL,                        # creation date
  finished        VARCHAR(150) NOT NULL,                # finish date of task
  steps           VARCHAR(150) NOT NULL,                # steps of task
  PRIMARY KEY     (id)                                  # Make the id the primary key
);

INSERT INTO jobseach ( title, created, finished, steps) VALUES (?,?,?,?);

SELECT * FROM art;